---
import Welcome from '../components/Welcome.astro';
import Layout from '../layouts/Layout.astro';

---

<Layout>
	<div class="bg-[#4686a0] h-screen flex items-center justify-center font-sans">
		<div class="bg-[#4686a0] p-10 rounded-2xl shadow-[3px_5px_20px_2px_rgb(0,0,0)] text-center w-full max-w-md">
		  <h1 class="text-white text-3xl font-bold mb-1">RESTAURANTE</h1>
		  <p class="text-gray-200 text-lg mb-8">MENU</p>
	  
		  <div class="flex flex-col gap-4">
			<a href="/login" class="bg-white text-[#4686a0] font-semibold py-2 px-4 rounded-full shadow-md hover:bg-gray-100 transition duration-300">
			  LOGIN
			</a>
			<a href="/register" class="bg-white text-[#4686a0] font-semibold py-2 px-4 rounded-full shadow-md hover:bg-gray-100 transition duration-300">
			  REGISTER
			</a>
		  </div>
		</div>
	  </div>
	  
</Layout>
