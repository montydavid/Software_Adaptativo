---
import Layout from '../layouts/Layout.astro';
---

<Layout>
  <div class="min-h-screen bg-gradient-to-br from-slate-800 to-slate-900 text-white p-6 font-sans">
    <h1 class="text-3xl font-bold text-center text-orange-400 mb-6">GASTOS</h1>

    <div class="bg-slate-700 p-4 rounded-lg shadow-md mx-auto space-y-4">
      <!-- Formulario -->
      <form class="grid grid-cols-6 gap-4 text-black">
        <div class="col-span-1">
          <label class="text-white block text-sm">Fecha</label>
          <input type="date" class="w-full p-2 rounded bg-amber-50" />
        </div>
        <div class="col-span-2">
          <label class="text-white block text-sm mb-1">Tipo</label>
          <select class="w-full p-2 rounded bg-amber-50">
            <option>AREPAS COMIDA</option>
            <option>TURNOS CAJERO</option>
            <option>ARRIENDO</option>
            <!-- Más opciones -->
          </select>
        </div>
        <div class="col-span-1">
          <label class="text-white block text-sm mb-1">Valor</label>
          <input type="number" class="w-full p-2 rounded bg-amber-50 " />
        </div>
        <div class="col-span-1">
          <label class="text-white block text-sm mb-1">Detalle</label>
          <input type="text" class="w-full p-2 rounded bg-amber-50" />
        </div>
        <div class="col-span-1">
          <label class="text-white block text-sm mb-1 ">Pago</label>
          <select class="w-full p-2 rounded bg-amber-50">
            <option>Seleccione</option>
            <option>Contado Caja Pos</option>
            <!-- Más opciones -->
          </select>
        </div>
        <div class="col-span-6 text-center">
          <button type="submit" class="bg-orange-500 text-white px-4 py-2 rounded hover:bg-orange-600">
            Guardar
          </button>
        </div>
      </form>

      <!-- Tabla -->
      <div class="overflow-x-auto">
        <table class="w-full mt-6 table-auto text-sm">
          <thead class="bg-slate-800 text-white">
