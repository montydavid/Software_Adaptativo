---
import Layout from "../layouts/Layout.astro";
---

<Layout>
  <div class="w-full px-6 py-8">
    <!-- Barra superior -->
    <div class="flex justify-between items-center mb-6 h-20 rounded-xl p-2">
      <div class="text-xl font-bold">Dashboard</div>
      <div class="text-sm">
        <span class="mr-4">Usuario: <strong>Administrador</strong></span>
        <a
          href="#"
          class="text-black p-2 bg-blue-200 rounded-full hover:bg-blue-400"
          >Cerrar Sesi√≥n</a
        >
      </div>
    </div>

    <!-- Grid de iconos -->
    <div class="grid grid-cols-6 gap-10">
      <div
        class="flex flex-col items-center bg-blue-800 rounded-xl p-4 hover:bg-blue-700 transition cursor-pointer"
      >
        <img
          src="/images/iconoP.jpg"
          alt="Pedidos"
          class="w-25 h-25 rounded-full"
        />
        <span class="text-center text-sm font-medium mt-2">Pedidos</span>
      </div>

      <div
        class="flex flex-col items-center bg-blue-800 rounded-xl p-4 hover:bg-blue-700 transition cursor-pointer"
      >
        <img
          src="/images/iconoProducto.jpg"
          alt="Productos"
          class="w-25 h-25 rounded-full"
        />
        <span class="text-center text-sm font-medium mt-2">Productos</span>
      </div>

      <div
        class="flex flex-col items-center bg-blue-800 rounded-xl p-4 hover:bg-blue-700 transition cursor-pointer"
      >
        <img
          src="/images/iconoMesa.png"
          alt="Mesas"
          class="w-25 h-25 rounded-full"
        />
        <span class="text-center text-sm font-medium mt-2">Mesas</span>
      </div>

      <div
